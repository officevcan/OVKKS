<resources>

    <!-- Base application theme. -->
    <!-- <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSplash</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
    </style>

    <style name="ToolBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@color/colorSplash</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
    </style>

    <style name="Popup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/colorSplash</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
    </style>

  <!--<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />-->

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorWhite</item>
    </style>


    <!--Edittext style-->
    <style name="DarkEditText"  parent="Material.Widget.EditText">
        <!--<item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Body1</item>-->
        <item name="android:textColor">@color/colorName</item>
        <item name="android:textColorHint">@color/colorName</item>
        <item name="et_dividerColor">@color/Colorloginbutton</item>
        <item name="et_labelTextColor">@color/Colorloginbutton</item>
        <item name="et_supportTextErrorColor">#FFFF0000</item>
        <item name="et_dividerErrorColor">#FFFF0000</item>

    </style>


    <!-- Button Style -->

    <style name="LightFlatButtonRippleStyle" parent="Material.Drawable.Ripple.Touch.Light">
        <item name="android:background">@color/Colorloginbutton</item>
        <item name="rd_cornerRadius">8dp</item>
    <!--    <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>-->
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="DarkFlatButtonRippleStyle" parent="Material.Drawable.Ripple.Touch">
        <item name="android:background">@color/Colorloginbutton</item>
        <item name="rd_cornerRadius">8dp</item>
      <!--  <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Button</item>-->
        <item name="android:textColor">@color/colorWhite</item>
    </style>
</resources>
